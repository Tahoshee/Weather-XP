{
    "manifest_version": 2,
    "name": "Weather XP",
    "version": "1.0",

    "description": "A simple browser extension that provides useful and accurate weather information from OpenWeather, with a Windows XP theme.",
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },

    "permissions": [
        "storage",
        "webRequest",
        "<all_urls>"
    ],

    "browser_action": {
        "default_icon": "icons/icon-32.png",
        "default_title": "Weather XP",
        "default_popup": "popup/popup.html"
    }
}